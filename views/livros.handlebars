<main id="main" class="main container">


 <section class="py-5 bg-light">
  <div class="container">
    <div class="mb-4 d-flex justify-content-between align-items-center flex-wrap gap-3">
      <h2 class="fw-bold">📚 Catálogo de Livros</h2>

      <div class="d-flex flex-wrap gap-3">
        <select class="form-select" id="filtro-categoria" style="min-width: 200px;">
          <option value="">Todas categorias</option>
          {{#each categorias}}
            <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>

        <input type="text" class="form-control" id="pesquisa-titulo" placeholder="🔍 Procurar por título..." style="min-width: 250px;">
      </div>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4" id="livros-lista">

      {{#each livros}}
        
            <div class="col livro-item" data-categoria="{{this.categoria}}" data-titulo="{{this.titulo}}">
          <div class="card h-100 shadow-sm border-0">
            
            <img src="{{this.capa}}" class="card-img-top livro-capa" alt="{{this.titulo}}">

            <div class="card-body d-flex flex-column justify-content-between">
              <p class="text-center fw-bold text-success mb-3">{{this.preco}} Kz</p>

              <h6 class="card-title text-center fw-semibold mb-2">{{this.titulo}}</h6>
              {{!-- <a href="/livros/{{this.id}}" class="btn btn-outline-primary btn-sm w-100 mt-auto">Ver detalhes</a> --}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>



</main>